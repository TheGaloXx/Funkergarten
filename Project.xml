	<source name="source" />

	<assets path="assets/preload" rename="assets" exclude="*.mp3"/>
	
	<library name="songs" preload="true" />
	<library name="shared" preload="true" />

	<library name="videos" preload="true" />
	
	<assets path="assets/songs"    library="songs"    exclude="*.mp3"/>
	<assets path="assets/shared"  library="shared"   exclude="*.mp3"/>

	<assets path="assets/preload/videos" exclude="*.mp3"/>

	<assets path="plugins/"             rename=''               if="windows" />
    <assets path="dlls/"                rename=''               if="windows" />
	<assets path='CREDITS' rename='CREDITS.txt' />
	<assets path='extra/LICENSE' rename='LICENSE.txt' />
	<assets path='extra/art' rename='icons' />
	<assets path="assets/fonts" embed='true'/>

