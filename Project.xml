<?xml version="1.0" encoding="utf-8"?>
<project>

	<app title="FNF': Funkergarten" file="Funkergarten" packageName="com.funkergarten.funkergarten" package="com.funkergarten.funkergarten" main="Main" company="funkergarten" />
	<app preloader="flixel.system.FlxPreloader" />

	<window width="1280" height="720" fps="" background="#000000" hardware="true" vsync="false" />
	<window if="html5" resizable="true"/>
	<window if="desktop" orientation="landscape" fullscreen="false" resizable="true" vsync="false"/>

	<set name="BUILD_DIR" value="export/debug" if="debug" />
	<set name="BUILD_DIR" value="export/release" unless="debug" />
	<set name="BUILD_DIR" value="export/32bit" if="32bit" />

	<source name="source" />

	<assets path="assets/preload" rename="assets"/>
	
	<library name="songs" preload="true" />
	<library name="shared" preload="true" />
	<library name="shit" preload="true"/>

	<assets path="assets/songs"    library="songs"/>
	<assets path="assets/shared"  library="shared"/>
	<assets path="assets/shit" embed='true' library="shit" />

	<assets path='CREDITS' rename='CREDITS.txt' />
	<assets path='LICENSE' rename='LICENSE.txt' />
	<assets path='extra' embed="true"/>
	<assets path="assets/fonts" embed='true'/>

	<haxelib name="flixel"/>
	<haxelib name="flixel-addons" />
	<!-- <haxelib name="flixel-studio" if="debug"/> -->
	<haxelib name="flixel-ui" />
	<haxelib name="SSIni" />
	<haxelib name="discord_rpc" if="desktop"/>

	<!--<haxedef name="GF" />-->
	<haxedef name="FLX_NO_FOCUS_LOST_SCREEN" />
	<haxedef name="FLX_NO_SOUND_TRAY" />
	<haxedef name="FLX_NO_DEBUG" unless="debug" />
	<haxedef name="NAPE_RELEASE_BUILD" unless="debug" />

	<haxedef name="HXCPP_CHECK_POINTER" if="windows" />
	<haxedef name="HXCPP_STACK_LINE" if="windows" />
	
	<icon path="extra/art/icon16.png" size='16'/>
	<icon path="extra/art/icon32.png" size='32'/>
	<icon path="extra/art/icon64.png" size='64'/>
	<icon path="extra/art/iconOG.png" />

	<!-- <haxedef name="SKIP_TO_CHARTINGSTATE" /> -->

</project>
